<view class="container list-container">
    <!-- 轮播组件 -->
    <swiper 
        indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" 
        interval="{{interval}}" 
        duration="{{duration}}"
        circular="{true}">
        <block wx:for="{{bannerList}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image"/>
            </swiper-item>
        </block>
    </swiper>
    <!-- 列表分页组件 -->
    <view class="page-container">
        <view wx:for="{{menuList}}" wx:key="{{item.adid}}">
            <view wx:if="{{item.templetid === '1'}}">
            </view>
            <view wx:if="{{item.templetid === '2'}}">
                <text class="text-single-snap title">{{item.subject}}</text>
                <view class="temp2">
                    <image 
                        wx:for="{{item.picset}}" 
                        wx:for-item="childItem" 
                        wx:for-index="childIndex" 
                        wx:key="childItem" 
                        wx:if="{{childIndex < 3}}"
                        mode="aspectFit" 
                        src="{{childItem}}"/>
                </view>
            </view>
            <view wx:if="{{item.templetid === '3'}}"></view>
        </view>
    </view>
</view>